//- MIXINs
mixin max-current(attribute)
    // MIXIN : src/html/page-one/block-one.pug : max-current
    div(class="sheet-max-current")
        h2(data-i18n=attribute)
        p(class="sheet-font-small-highlight")
            span(data-i18n="gesamt")
        div(class="sheet-max-current-box")
            input(type="number" name="attr_"+attribute+"_max" value=0) 
        p(class="sheet-font-small-highlight")
            span(data-i18n="aktuell")
        div(class="sheet-max-current-box")
            input(type="number" name="attr_"+attribute+"_current" value=0)


//- SEITENINHALT
div(class="sheet-3cols")
    include ../bloecke/charakterdaten.pug
    include ../bloecke/logo_und_infos.pug
