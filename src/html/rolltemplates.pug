        div(class="sheet-template-row")
            span(class="sheet-template-zahlen sheet-template-regular-di") {{computed::wurf}}
            span(class="sheet-template-zahlen") = {{wurf}}
        | {{#rollGreater() bonus 0}}
        div(class="sheet-template-row")
            span(data-i18n="bonus")
            span(class="sheet-template-zahlen") + {{bonus}}
        | {{/rollGreater() bonus 0}}
        hr
        div(class="sheet-template-row")
            span(data-i18n="summe")
            span(class="sheet-template-zahlen") = {{computed::summe}}        

