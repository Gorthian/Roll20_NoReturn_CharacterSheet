//- Offene Probe auf Fertigkeiten
rolltemplate(class="sheet-rolltemplate-probe_offen")
    div(class="sheet-template-container")
        div(class="sheet-template-header") {{fertigkeit}} - {{attribut}}
        hr
        div(class="sheet-template-row") 
            span Hazard 
            span
                img(src='https://gorthian.de/roll20/noreturn/dice_red.png' width='25px')
        div(class="sheet-template-row")
            span(class="sheet-template-zahlen") {{computed::hazard}}
            span(class="sheet-template-zahlen") = {{hazard}}
        div(class="sheet-template-row") 
            span Wurf
            span
                img(src='https://gorthian.de/roll20/noreturn/dice_white.png' width='25px')
        div(class="sheet-template-row")
            span(class="sheet-template-zahlen") {{computed::wurf}}
            span(class="sheet-template-zahlen") = {{wurf}}
        div(class="sheet-template-row")
            span Bonus
            span(class="sheet-template-zahlen") + {{bonus}}
        div(class="sheet-template-row")
            span Summe
            span(class="sheet-template-zahlen") = {{computed::summe}}        
