//- MIXINs
mixin repeating-textarea(name)
    // MIXIN : src/html/page-two.pug : repeating-textarea
    div(class="sheet-box")
        h1(data-i18n=name)
        fieldset(class="repeating_"+name)
            input(name="attr_"+name+"-titel" type="text" class="sheet-input-underline")
            details 
                summary(class="sheet-summary-standard") &nbsp;
                textarea(name="attr_"+name+"-beschreibung" class="sheet-details-standard")

//- SEITENINHALT
div(class="sheet-page-two")
    include page-two/block-one.pug
    include page-two/block-two.pug
    include page-two/block-three.pug
    include page-two/block-four.pug

